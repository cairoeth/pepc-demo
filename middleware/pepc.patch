+
+/// Construct the searcher wallet
+pub fn get_searcher_wallet() -> Result<LocalWallet> {
+    let private_key = "59c6995e998f97a5a0044966f0945389dc9e86dae88c7a8412f4603b6b78690d";
+    private_key
