+/// Return a Provider for the given URL
+pub fn get_http_provider() -> Result<Provider<Http>> {
+    let url = "http://127.0.0.1:8545";
+    Provider::<Http>::try_from(url).map_err(|_| eyre::eyre!("Invalid RPC URL"))
